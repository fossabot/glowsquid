{
  "root": "libs/glow-ui",
  "sourceRoot": "libs/glow-ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/glow-ui/**/*.{ts,svelte,spec.ts}"]
      }
    },
    "check": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "svelte-check",
        "cwd": "libs/glow-ui"
      }
    },
    "build": {
      "executor": "@nxext/vite:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entryFile": "src/index.ts",
        "frameworkConfigFile": "@nxext/svelte/plugins/vite",
        "outputPath": "dist/libs/glow-ui",
        "assets": [
          {
            "glob": "/*",
            "input": "./public/**",
            "output": "./"
          }
        ],
        "tsConfig": "libs/glow-ui/tsconfig.lib.json"
      },
      "configurations": {
        "production": {}
      }
    },
    "test": {
      "executor": "@nxext/vitest:vitest",
      "options": {
        "command": "run"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/svelte",
        "port": 4400,
        "config": {
          "configFolder": "libs/glow-ui/.storybook"
        },
        "projectBuildConfig": "glow-ui:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/svelte",
        "outputPath": "dist/storybook/glow-ui",
        "config": {
          "configFolder": "libs/glow-ui/.storybook"
        },
        "projectBuildConfig": "glow-ui:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
